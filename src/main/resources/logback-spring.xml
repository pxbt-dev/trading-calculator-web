<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Color pattern with emojis -->
    <property name="COLOR_PATTERN" value="%d{yyyy-MM-dd HH:mm:ss} %highlight(%-5level) %cyan(%logger{36}) - %msg%n"/>
    <property name="PLAIN_PATTERN" value="%d{yyyy-MM-dd HH:mm:ss} %-5level %logger{36} - %msg%n"/>

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${COLOR_PATTERN}</pattern>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="CONSOLE" />
    </root>

    <!-- Special formatting for Logbook -->
    <logger name="org.zalando.logbook" level="INFO">
        <appender name="LOGBOOK" class="ch.qos.logback.core.ConsoleAppender">
            <encoder>
                <pattern>%d{HH:mm:ss} %boldCyan(ðŸ“¡ LOGBOOK) - %msg%n</pattern>
            </encoder>
        </appender>
    </logger>

    <!-- Our app logs in green -->
    <logger name="com.pxbtdev" level="DEBUG">
        <appender name="APP" class="ch.qos.logback.core.ConsoleAppender">
            <encoder>
                <pattern>%d{HH:mm:ss} %boldGreen(ðŸš€ TRADING-APP) - %msg%n</pattern>
            </encoder>
        </appender>
    </logger>
</configuration>